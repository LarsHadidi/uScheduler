<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} - Thread [%thread] %-5level - %msg%n</pattern>
    </encoder>
  </appender>
	<logger name="org.smartjava.scalatra" level="DEBUG"/>
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
